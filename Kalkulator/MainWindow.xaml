<Window x:Class="Kalkulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <!-- This column will receive all remaining width -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- This row will receive all remaining Height -->
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Grid.ColumnSpan="10" Grid.RowSpan="2"></TextBox>
        <TextBox Grid.Row="3" Grid.ColumnSpan="10" Grid.RowSpan="2"></TextBox>

        
        <StackPanel Grid.Row="5" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <RadioButton>Hex</RadioButton>
            <RadioButton>Dec</RadioButton>
            <RadioButton>Oct</RadioButton>
            <RadioButton>Bin</RadioButton>
        </StackPanel>
        <StackPanel Grid.Row="8" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <RadioButton>Qword</RadioButton>
            <RadioButton>Dword</RadioButton>
            <RadioButton>Word</RadioButton>
            <RadioButton>Byte</RadioButton>
        </StackPanel>
        
        <Button Grid.Row="4" Grid.Column="2" IsEnabled="False"></Button>
        <Button Grid.Row="5" Grid.Column="2">(</Button>
        <Button Grid.Row="6" Grid.Column="2">RoL</Button>
        <Button Grid.Row="7" Grid.Column="2">Or</Button>
        <Button Grid.Row="8" Grid.Column="2">Lsh</Button>
        <Button Grid.Row="9" Grid.Column="2">Not</Button>
        
        <Button Grid.Row="4" Grid.Column="3">Mod</Button>
        <Button Grid.Row="5" Grid.Column="3">)</Button>
        <Button Grid.Row="6" Grid.Column="3">RoR</Button>
        <Button Grid.Row="7" Grid.Column="3">Xor</Button>
        <Button Grid.Row="8" Grid.Column="3">Rsh</Button>
        <Button Grid.Row="9" Grid.Column="3">And</Button>
        
        <Button Grid.Row="4" Grid.Column="4">A</Button>
        <Button Grid.Row="5" Grid.Column="4">B</Button>
        <Button Grid.Row="6" Grid.Column="4">C</Button>
        <Button Grid.Row="7" Grid.Column="4">D</Button>
        <Button Grid.Row="8" Grid.Column="4">E</Button>
        <Button Grid.Row="9" Grid.Column="4">F</Button>
        
        <Button Grid.Row="4" Grid.Column="5">MC</Button>
        <Button Grid.Row="5" Grid.Column="5">BACK</Button>
        <Button Grid.Row="6" Grid.Column="5">7</Button>
        <Button Grid.Row="7" Grid.Column="5">4</Button>
        <Button Grid.Row="8" Grid.Column="5">1</Button>
        <Button Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="2">0</Button>
        
        <Button Grid.Row="4" Grid.Column="6">MR</Button>
        <Button Grid.Row="5" Grid.Column="6">CE</Button>
        <Button Grid.Row="6" Grid.Column="6">8</Button>
        <Button Grid.Row="7" Grid.Column="6">5</Button>
        <Button Grid.Row="8" Grid.Column="6">2</Button>
        
        <Button Grid.Row="4" Grid.Column="7">MS</Button>
        <Button Grid.Row="5" Grid.Column="7">c</Button>
        <Button Grid.Row="6" Grid.Column="7">9</Button>
        <Button Grid.Row="7" Grid.Column="7">6</Button>
        <Button Grid.Row="8" Grid.Column="7">3</Button>
        <Button Grid.Row="9" Grid.Column="7">,</Button>
        
        <Button Grid.Row="4" Grid.Column="8">M+</Button>
        <Button Grid.Row="5" Grid.Column="8">+/-</Button>
        <Button Grid.Row="6" Grid.Column="8">/</Button>
        <Button Grid.Row="7" Grid.Column="8">*</Button>
        <Button Grid.Row="8" Grid.Column="8">-</Button>
        <Button Grid.Row="9" Grid.Column="8">+</Button>
        
        <Button Grid.Row="4" Grid.Column="9">M-</Button>
        <Button Grid.Row="5" Grid.Column="9">sqrt</Button>
        <Button Grid.Row="6" Grid.Column="9">%</Button>
        <Button Grid.Row="7" Grid.Column="9">1/x</Button>
        <Button Grid.Row="8" Grid.Column="9" Grid.RowSpan="2">=</Button>
    </Grid>
</Window>
